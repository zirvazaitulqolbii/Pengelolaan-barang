@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "List Role";
}

<h1 class="mt-4">Daftar Role</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="ListRole">Daftar Role</a></li>
    <li class="breadcrumb-item active">Daftar Role</li>
</ol>

@if (Model.Any())
{
    <div class="card mb-4">
    <div class="card-body">
    <p class="mb-0">
    <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Admin">
        Add New Role</a>
    <br/><br/>
    <table id="datatablesSimple" class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Aksi</th>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a asp-controller="Admin" asp-action="EditRole"
                asp-route-id="@role.Id" class="btn btn-primary">Edit</a></td>
                <td>
                    <a asp-controller="Role" asp-action="DeleteRole"
                    asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
    </div>
    </div>

}
else
{
    <p>Belum ada Role yang dibuat</p>
}

